<UserControl x:Class="AgDataGrid_CustomSummary.MainPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:my="clr-namespace:DevExpress.AgDataGrid;assembly=DevExpress.AgDataGrid.v10.1" xmlns:ageditors="clr-namespace:DevExpress.Xpf.Editors.Settings;assembly=DevExpress.Xpf.Core.v10.1" mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Background="White">
        <my:AgDataGrid x:Name="grid" ShowTotals="True" CustomSummary="grid_CustomSummary">
            <my:AgDataGrid.Columns>
                <my:AgDataGridColumn FieldName="CompanyName" Width="180" />
                <my:AgDataGridColumn FieldName="UnitPrice">
                    <my:AgDataGridColumn.EditSettings>
                        <ageditors:TextEditSettings DisplayFormat="c2" />
                    </my:AgDataGridColumn.EditSettings>
                </my:AgDataGridColumn>
                <my:AgDataGridColumn FieldName="Quantity" />
            </my:AgDataGrid.Columns>
            <my:AgDataGrid.TotalSummary>
                <my:AgDataGridSummaryItem FieldName="UnitPrice" DisplayFormat="c2" SummaryType="Custom" ShowInColumn="CompanyName" Title="Total Price: " />
            </my:AgDataGrid.TotalSummary>
        </my:AgDataGrid>
    </Grid>
</UserControl>
